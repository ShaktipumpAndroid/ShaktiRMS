<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:orientation="vertical"

    android:layout_height="fill_parent" >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"

        android:layout_marginTop="10dp">




        <TextView
            android:id="@+id/device_number_text"
            android:layout_width="wrap_content"
            android:gravity="left"
            android:textStyle="bold|italic"
            android:text="Device Number : "
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="5dp"/>



        <TextView
            android:id="@+id/device_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textStyle="italic"
            android:layout_toRightOf="@+id/device_number_text"
            android:textSize="15sp"
            android:layout_marginTop="5dp" />


        <TextView
            android:id="@+id/fault_date_txt"
            android:layout_width="wrap_content"
            android:gravity="left"
            android:text="Fault Date : "
            android:textStyle="bold|italic"
            android:layout_below="@+id/device_number"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="15dp"/>


        <TextView
            android:id="@+id/fault_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textStyle="italic"
            android:layout_toRightOf="@+id/fault_date_txt"
            android:textSize="15sp"

            android:layout_below="@+id/device_number"
            android:layout_marginTop="15dp" />


        <TextView
            android:id="@+id/fault_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textStyle="bold|italic"
            android:text="Fault Name : "
            android:textSize="15sp"

            android:layout_below="@+id/fault_date_txt"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="15dp" />


        <TextView
            android:id="@+id/fault_name"
            android:layout_width="wrap_content"
            android:gravity="left"
            android:textStyle="italic"
            android:layout_below="@+id/fault_date"
            android:layout_toRightOf="@+id/fault_name_txt"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="15dp"/>


        <TextView
            android:id="@+id/fault_count_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textStyle="bold|italic"
            android:text="Fault Count : "
            android:textSize="15sp"

            android:layout_below="@+id/fault_name_txt"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="6dp" />


        <TextView
            android:id="@+id/fault_count"
            android:layout_width="wrap_content"
            android:gravity="left"
            android:textStyle="italic"
            android:layout_below="@+id/fault_name"
            android:layout_toRightOf="@+id/fault_name_txt"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="6dp"/>






