<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_80sdp"
   android:layout_margin="@dimen/_2sdp"

    android:background="@drawable/blue_grediant_drawable"
    >

    <LinearLayout
        android:id="@+id/lvlMainItemViewID"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_75sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout

            android:layout_weight="1.3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dt7"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="0.7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_2sdp">

            <TextView
                android:layout_marginTop="@dimen/_2sdp"
                android:id="@+id/txtDFoultHeadID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fault Name:"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/white"
                android:fontFamily="@font/open_sans_regular"/>

            <TextView
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_toEndOf="@+id/txtDFoultHeadID"
                android:id="@+id/txtDFoultValueID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reserved "
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/red"
                android:background="@color/white"
                android:fontFamily="@font/open_sans_bold"/>


            <TextView
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_below="@+id/txtDFoultHeadID"
                android:id="@+id/txtDNHeadID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Device No:"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/white"
                android:fontFamily="@font/open_sans_regular"/>

            <TextView
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_below="@+id/txtDFoultHeadID"
                android:layout_toEndOf="@+id/txtDNHeadID"
                android:id="@+id/txtDNValueID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="71-0008-0-14-09-2020"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/white"
                android:fontFamily="@font/open_sans_regular"/>



            <TextView
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_below="@+id/txtDNHeadID"
                android:id="@+id/txtDDateHeadID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date:"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/white"
                android:fontFamily="@font/open_sans_regular"/>

            <TextView
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_below="@+id/txtDNHeadID"
                android:layout_toEndOf="@+id/txtDDateHeadID"
                android:id="@+id/txtDDateValueID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06-08-2021"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/white"
                android:fontFamily="@font/open_sans_regular"/>


            <TextView
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_below="@+id/txtDDateHeadID"
                android:id="@+id/txtDtimeHeadID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time:"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/white"
                android:fontFamily="@font/open_sans_regular"/>

            <TextView
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_below="@+id/txtDDateHeadID"
                android:layout_toEndOf="@+id/txtDtimeHeadID"
                android:id="@+id/txtDtimeValueID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06:40:03"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/white"
                android:fontFamily="@font/open_sans_regular"/>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:visibility="gone"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_below="@+id/lvlMainItemViewID"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/blue"/>

</RelativeLayout>