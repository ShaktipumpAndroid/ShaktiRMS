            <TextView
                android:id="@+id/frame_date_time_st"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:textSize="@dimen/_11ssp"
                android:text="Date and Time "
                android:textColor="@color/black"
                android:gravity="end"
                android:fontFamily="@font/open_sans_regular"
                />

            <TextView

                android:id="@+id/frame_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frame_date_time_st"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:textSize="@dimen/_11ssp"
                android:gravity="end"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/open_sans_regular"
                />


            <!--android:layout_below="@+id/network_icon"-->
            <TextView
                android:id="@+id/device_number_st"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:gravity="start"
                android:text="Device Number"
                android:fontFamily="@font/open_sans_regular"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_below="@+id/device_number_st"
                android:id="@+id/device_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:gravity="start"
                android:fontFamily="@font/open_sans_regular"
                android:textSize="@dimen/_11ssp"
                />

            <TextView
                android:id="@+id/customer_name_st"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/device_number"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/open_sans_regular"
                android:text="Name: "
                />

            <TextView
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_toEndOf="@+id/customer_name_st"
                android:id="@+id/customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/device_number"

                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/open_sans_regular"
                android:text=""
                />


            <TextView
                android:id="@+id/mobile_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/device_number"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:layout_toRightOf="@+id/customer_name"
                android:gravity="right"
                android:textSize="@dimen/_13ssp"
                android:fontFamily="@font/open_sans_regular" />


