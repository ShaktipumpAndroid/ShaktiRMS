        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_2sdp">


            <TextView
                android:id="@+id/real_monitor_name_st"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/customer_name_st"
                android:layout_marginStart="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:fontFamily="@font/open_sans_regular"
                android:text="Status: "
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:layout_below="@+id/customer_name_st"
                android:layout_toEndOf="@+id/real_monitor_name_st"
                android:id="@+id/real_monitor_icon"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:background="@drawable/shape_circle_plan"
                android:textStyle="bold" />

            <TextView
                android:layout_below="@+id/customer_name_st"
                android:id="@+id/real_monitor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_toEndOf="@+id/real_monitor_icon"

                android:background="@android:color/transparent"
                android:paddingTop="@dimen/_1sdp"
                android:text=""
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/open_sans_regular" />

            <!--<TextView

