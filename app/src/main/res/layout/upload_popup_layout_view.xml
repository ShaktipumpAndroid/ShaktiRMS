<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:background="@color/white">

        <TextView
            android:layout_marginStart="@dimen/_8sdp"
            android:id="@+id/txtBTHeadingTopID"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_35sdp"
            android:background="@color/white"
            android:text="Select option"
            android:gravity="center"
            android:fontFamily="@font/open_sans_semibold"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_below="@+id/txtBTHeadingTopID"
            android:id="@+id/txtBTInfoMSGID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Select below option to upload excel file on server."
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/open_sans_regular"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/black"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:weightSum="2"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txt15thDaysBTNID"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blue_fb"
                android:text="15th Day's"
                android:gravity="center"
                android:fontFamily="@font/open_sans_semibold"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/white"
                android:layout_marginEnd="@dimen/_1sdp"
                />

            <TextView
                android:layout_marginStart="@dimen/_1sdp"
                android:id="@+id/txt5thYearBTNID"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blue_fb"
                android:text="5th Years"
                android:gravity="center"
                android:fontFamily="@font/open_sans_semibold"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/white"/>

        </LinearLayout>







    </RelativeLayout>





</RelativeLayout>