<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:layout_above="@+id/lvlDotViewID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/_10sdp">


        <ImageView
            android:id="@+id/imgDeviceID"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_200sdp"
            android:src="@drawable/dt1"

            />


        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/txtDescID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shakti's Simha Universal Drive is a unique product designed, developed and manufactured in India. SIMHA series are three-phase variable frequency drive compatible with solar power system.
SIMHA drive can convert the DC generated by solar panels into AC, which is in accordance with current required to drive motor."
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp"
            android:fontFamily="@font/open_sans_regular"/>



    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/lvlDotViewID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_8sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:background="@color/white"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:background="@color/gray"
            android:layout_marginStart="@dimen/_5sdp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:background="@color/gray"
            android:layout_marginStart="@dimen/_5sdp"/>



    </LinearLayout>




</RelativeLayout>