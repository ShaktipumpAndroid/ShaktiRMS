<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:id="@+id/scrollView_New_Account"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal|vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="5dip"
        android:background="@color/white"
        android:scrollbarStyle="outsideInset"
        android:fillViewport="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">




            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_layout_otp"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"

                android:textSize="@dimen/size_large18"
                app:hintTextAppearance="@style/input_layout_hint"
                android:layout_marginTop="30dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_otp"
                    android:singleLine="true"
                    android:inputType="number"
                    android:textSize="@dimen/size_mid16"
                    android:hint="@string/hint_OTP"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:maxLength="4"     />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:text="@string/btn_verify_otp"
                android:id="@+id/btn_verify_otp"
                android:layout_width="200dp"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/space_mid10"
                android:background="@layout/rounded_corner_blue"
                android:layout_marginTop="@dimen/space_large25"
                android:gravity="center"
                android:textColor="@color/white"

                android:layout_height="wrap_content" />


            <TextView
                android:text="@string/btn_send_otp"
                android:id="@+id/btn_send_otp"
                android:layout_width="200dp"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/space_mid10"
                android:background="@layout/rounded_corner_blue"
                android:layout_marginTop="@dimen/space_large25"
                android:gravity="center"
                android:textColor="@color/white"

                android:layout_height="wrap_content" />

            <TextView
                android:text="0"
                android:id="@+id/txtTimerCounterID"
                android:layout_width="200dp"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/space_mid10"
                android:background="@color/white"
                android:layout_marginTop="@dimen/space_large25"
                android:gravity="center"
                android:textSize="@dimen/_18ssp"

                android:textColor="@color/blue"

                android:layout_height="wrap_content" />

        </LinearLayout>




    </ScrollView>




</LinearLayout>