<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlvMenuMainView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_85sdp"
    android:background="@android:color/transparent"
    android:padding="@dimen/_2sdp">


    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_16sdp"
        app:contentPadding="@dimen/_1sdp">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lvlMainViewDataContainerID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            >



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/txtPayDescNameID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="top"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="Vikas Gothi"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textAllCaps="true"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_14ssp"

                    />

                <TextView
                    android:id="@+id/txtPayEXPHEADID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="top"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text=""
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:textAllCaps="false"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_14ssp"

                    />



            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/blue_fb"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                >

                <TextView
                    android:id="@+id/txtPaymentRSHeadID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="top"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="RS: "
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textAllCaps="true"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_14ssp"

                    />

                <TextView
                    android:layout_toEndOf="@+id/txtPaymentRSHeadID"
                    android:id="@+id/txtPaymentValueID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="top"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="100"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:textAllCaps="true"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_14ssp"

                    />


                <TextView

                    android:id="@+id/txtPaymentBuyNowBTNID"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="BUY NOW"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/round_green_shape"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10ssp"

                    />

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>


