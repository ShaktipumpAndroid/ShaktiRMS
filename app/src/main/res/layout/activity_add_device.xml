<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_phone_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            app:hintTextAppearance="@style/input_layout_hint_gray">

            <EditText
                android:id="@+id/et_phone_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="start"
                android:hint="@string/err_reg_mobile_no12"

                android:inputType="text"

                android:singleLine="true"
                android:textSize="@dimen/space_large18"

                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <RelativeLayout
            android:id="@+id/rlvCheckboxlayoutID"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_30sdp">


            <ImageView
                android:id="@+id/imgCheckBoxID"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_check_blue" />

            <TextView
                android:id="@+id/txtCheckboxID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_toEndOf="@+id/imgCheckBoxID"
                android:fontFamily="@font/open_sans_regular"
                android:text="@string/is_user_location_text"
                android:textColor="@color/blue_fb"
                android:textSize="@dimen/_14ssp"
                android:textStyle="normal" />


        </RelativeLayout>

        <TextView
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            android:drawableTop="@drawable/rq"
            android:gravity="center"

            android:text="@string/addDevicePressHeretoSCAN"
            android:textAllCaps="true"
            android:textColor="@color/shakti_color"
            android:textSize="@dimen/space_large18" />

        <TextView
            android:id="@+id/txtORID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/open_sans_bold"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:text="OR"
            android:textAllCaps="true"
            android:textColor="@color/shakti_color"
            android:textSize="@dimen/_16ssp" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_serial_no"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"

            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="20dp"
            app:hintTextAppearance="@style/input_layout_hint_gray">

            <EditText
                android:id="@+id/et_Serial_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:hint="Enter Serial number here"
                android:inputType="text"

                android:singleLine="true"

                android:textSize="@dimen/_14ssp"


                android:textStyle="normal" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/txtSubmiteBUTTONID"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/rounded_corner_gredient_btn"
            android:fontFamily="@font/open_sans_bold"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:text="Add Device"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp" />

