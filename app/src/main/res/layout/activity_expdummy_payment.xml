<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_wtsp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlvHeaderViewID"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/btn_grediant_drawable">

        <RelativeLayout
            android:id="@+id/rlvBackViewID"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgHeaderID"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerVertical="true"
                android:paddingStart="@dimen/_5sdp"
                android:paddingTop="@dimen/_15sdp"
                android:paddingEnd="@dimen/_1sdp"
                android:paddingBottom="@dimen/_15sdp"
                android:src="@drawable/icn_back" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgDeviceImageID"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imgHeaderID"
                android:paddingStart="@dimen/_1sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingEnd="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:src="@drawable/dt7" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txtHeaderID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/rlvBackViewID"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Vikas Gothi"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"

            />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/dummy_img" />

    <RelativeLayout
        android:padding="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_280sdp"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/imgProductImageID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
             />

    </RelativeLayout>




        <RelativeLayout
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_trans_lt">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:elevation="@dimen/_30sdp"
                android:outlineAmbientShadowColor="@color/blue"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_10sdp"

                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/txtPlanTltID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:gravity="center_horizontal"
                        android:text="Your Subscription Has Expired!"
                        android:textAllCaps="false"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:layout_below="@+id/txtPlanTltID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:gravity="center_horizontal"
                        android:text="Subscribe now to renew your plan."
                        android:textAllCaps="false"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/txtSubscribeBTNID"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/round_shape_setbtn"
                        android:fontFamily="@font/open_sans_bold"
                        android:gravity="center"
                        android:text="Suscribe Now"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>