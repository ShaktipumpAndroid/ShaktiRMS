<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!--toolbar-->
    <include layout="@layout/toolbar" />

    <ImageView
        android:id="@+id/imgShaktiLogoID"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_130sdp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/logo_blue" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imgShaktiLogoID"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_40sdp">


        <RelativeLayout
            android:id="@+id/rlvEditUserID"
            android:layout_marginTop="@dimen/_10sdp"

            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/round_edit_text_border">

            <EditText
                android:id="@+id/edtUserID"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@android:color/transparent"
                android:hint="User Name"
                android:textColorHint="@color/colorAccent"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:singleLine="true"
                android:maxLines="1"
                tools:ignore="Autofill"
                android:ellipsize="end"
                android:textStyle="normal" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlvEditNewPassID"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/rlvEditUserID"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/round_edit_text_border">

            <EditText
                android:id="@+id/edtNewPassID"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@android:color/transparent"
                android:hint="New Password"
                android:textColorHint="@color/colorAccent"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:singleLine="true"
                android:maxLines="1"
                tools:ignore="Autofill"
                android:ellipsize="end"
                android:textStyle="normal" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rlvEditConfirmPassID"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/rlvEditNewPassID"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/round_edit_text_border">

            <EditText
                android:id="@+id/edtConfrimPassID"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@android:color/transparent"
                android:hint="Confirm Password"
                android:textColorHint="@color/colorAccent"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:singleLine="true"
                android:maxLines="1"
                tools:ignore="Autofill"
                android:ellipsize="end"
                android:textStyle="normal" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rlvEditOTPID"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/rlvEditConfirmPassID"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/round_edit_text_border">

            <EditText
                android:id="@+id/edtOTPID"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:hint="Enter OTP"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/colorAccent"
                android:textSize="@dimen/_14ssp"
                android:textStyle="normal"
                tools:ignore="Autofill"/>


        </RelativeLayout>


        <TextView
            android:id="@+id/txtSaveBTNID"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_below="@+id/rlvEditOTPID"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerHorizontal="true"
            android:background="@layout/rounded_corner_blue"
            android:text="Save"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp">




        </TextView>

        <TextView
            android:layout_below="@+id/txtSaveBTNID"
            android:text="@string/btn_send_otp"
            android:id="@+id/btn_send_otp"
            android:layout_width="@dimen/_150sdp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/space_mid10"
            android:background="@layout/rounded_corner_blue"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:textColor="@color/white"

            android:layout_height="wrap_content" />


        <TextView
            android:layout_below="@+id/btn_send_otp"
            android:text="0"
            android:layout_centerHorizontal="true"
            android:id="@+id/txtTimerCounterID"
            android:layout_width="@dimen/_150sdp"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/space_mid10"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:textSize="@dimen/_18ssp"

            android:textColor="@color/blue"

            android:layout_height="wrap_content" />




    </RelativeLayout>


</RelativeLayout>