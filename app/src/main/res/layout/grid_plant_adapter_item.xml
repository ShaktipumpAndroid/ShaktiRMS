<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlvMenuMainView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:padding="@dimen/_2sdp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_4sdp"
        app:contentPadding="@dimen/_1sdp">

        <RelativeLayout
            android:id="@+id/lvlMainViewDataContainerID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
           >

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/txtPlantNameHeadID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_regular"
                android:text="Name:"
                android:layout_marginStart="@dimen/_15sdp"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"

                />

                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_toEndOf="@+id/txtPlantNameHeadID"
                    android:id="@+id/txtPlantNameValueID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="Irrigation"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"

                    />

            <TextView
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_below="@+id/txtPlantNameHeadID"
                android:id="@+id/txtPlantAddressHeadID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_regular"
                android:text="Address:"
                android:layout_marginStart="@dimen/_15sdp"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:layout_marginBottom="@dimen/_1sdp"
                />

            <TextView
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_below="@+id/txtPlantNameHeadID"
                android:layout_toEndOf="@+id/txtPlantAddressHeadID"
                android:id="@+id/txtPlantAddressValueID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:text="Irrigation"
                android:layout_toStartOf="@+id/txtPlantArrowID"
                android:layout_marginStart="@dimen/_5sdp"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:layout_marginBottom="@dimen/_1sdp"

                />


            <TextView
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_below="@+id/txtPlantAddressValueID"
                android:id="@+id/txtPlantCapacityHeadID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_regular"
                android:text="Capacity:"
                android:layout_marginStart="@dimen/_15sdp"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:layout_marginBottom="@dimen/_1sdp"
                />

            <TextView
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_below="@+id/txtPlantAddressValueID"
                android:layout_toEndOf="@+id/txtPlantAddressHeadID"
                android:id="@+id/txtPlantCapacityValueID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:text="50"
                android:layout_marginStart="@dimen/_5sdp"
                android:textAllCaps="true"
                android:textColor="@color/red"
                android:textSize="@dimen/_12ssp"
                android:layout_marginBottom="@dimen/_5sdp"

                />

            <TextView
                android:id="@+id/txtPlantCapacityUnitID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtPlantAddressValueID"
                android:layout_marginStart="6dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_toEndOf="@+id/txtPlantCapacityValueID"
                android:fontFamily="@font/open_sans_bold"
                android:text="kWh"
                android:textAllCaps="false"
                android:textColor="@color/red"
                android:textSize="@dimen/_12ssp"

                />

            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/txtPlantArrowID"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:fontFamily="@font/open_sans_bold"
                android:background="@drawable/arrow_send_icn"
                android:layout_marginEnd="@dimen/_5sdp"
                android:textAllCaps="true"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/_18ssp"
                android:layout_marginBottom="@dimen/_10sdp"

                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>


