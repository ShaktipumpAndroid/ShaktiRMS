<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fancy="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.rilixtech.materialfancybutton.MaterialFancyButton
            android:id="@+id/tab1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:paddingBottom="20dp"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:paddingTop="20dp"
            fancy:mfb_borderColor="@color/colorAccent"
            fancy:mfb_borderWidth="2dp"
            fancy:mfb_defaultColor="#1976D2"
            fancy:mfb_focusColor="#42A5F5"
            fancy:mfb_fontIconSize="25sp"
            fancy:mfb_icon="@string/fawi_code_fork"
            fancy:mfb_iconFont="fontawesome.ttf"
            fancy:mfb_iconPaddingRight="10dp"
            fancy:mfb_iconPosition="left"
            fancy:mfb_radius="30dp"
            fancy:mfb_text="Operations"
            fancy:mfb_textColor="#FFFFFF"
            fancy:mfb_textPosition="left"
            fancy:mfb_textSize="20sp" />

        <com.rilixtech.materialfancybutton.MaterialFancyButton
            android:id="@+id/tab2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:paddingTop="20dp"
            fancy:mfb_borderColor="@color/colorAccent"

            fancy:mfb_borderWidth="2dp"
            fancy:mfb_defaultColor="#1976D2"
            fancy:mfb_focusColor="#42A5F5"
            fancy:mfb_fontIconSize="25sp"
            fancy:mfb_icon="@string/fawi_puzzle_piece"

            fancy:mfb_iconFont="fontawesome.ttf"
            fancy:mfb_iconPaddingRight="10dp"
            fancy:mfb_iconPosition="left"
            fancy:mfb_radius="30dp"
            fancy:mfb_text="Parameters"
            fancy:mfb_textColor="#FFFFFF"
            fancy:mfb_textPosition="left"
            fancy:mfb_textSize="20sp" />

        <com.rilixtech.materialfancybutton.MaterialFancyButton
            android:id="@+id/tab3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:paddingTop="20dp"

            fancy:mfb_borderColor="@color/colorAccent"
            fancy:mfb_borderWidth="2dp"
            fancy:mfb_defaultColor="#1976D2"
            fancy:mfb_focusColor="#42A5F5"
            fancy:mfb_fontIconSize="25sp"
            fancy:mfb_icon="@string/fawi_database"
            fancy:mfb_iconFont="fontawesome.ttf"
            fancy:mfb_iconPaddingRight="10dp"
            fancy:mfb_iconPosition="left"
            fancy:mfb_radius="30dp"
            fancy:mfb_text="Data"
            fancy:mfb_textColor="#FFFFFF"
            fancy:mfb_textPosition="left"
            fancy:mfb_textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="bottom|center_horizontal">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/shakti" />
    </LinearLayout>

</LinearLayout>