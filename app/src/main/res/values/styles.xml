        <item name="android:paddingTop">3dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="units_style">
        <item name="android:gravity">center_vertical|center_horizontal</item>

        <item name="android:paddingTop">22dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="getbutton_style">
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="setbutton_style">
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#6D4C41</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

